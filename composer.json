{
    "name": "lightslim/lightslim",
    "description": "A web framework build on slimphp framework with Eloquent ORM.",
    "keywords": ["microframework", "rest", "router", "psr7"],
    "homepage": "https://github.com/twn39/lightslim",
    "license": "MIT",
    "authors": [
        {
            "name": "Weinan Tang",
            "email": "twn39@163.com",
            "homepage": "http://www.libre.me"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "slim/slim": "^3.9",
        "monolog/monolog": "^1.23",
        "symfony/dotenv": "^4.0",
        "cakephp/validation": "^3.4",
        "illuminate/database": "^5.5",
        "illuminate/events": "^5.5"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.3",
        "deployer/deployer": "^6.1",
        "robmorgan/phinx": "^0.9",
        "symfony/var-dumper": "^4.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
	"scripts": {
        "start": "php -S 0.0.0.0:8080 -t public index_dev.php",
        "test": "phpunit"
	}

}
